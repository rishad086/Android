<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8C00"
    android:orientation="vertical"
    tools:context=".travelerloginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customer_status"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:text="Traveler Login"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="60sp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:id="@+id/emailTra"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="60sp"
        android:ems="10"
        android:id="@+id/passwordTra"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/login_tra_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOGIN"
        android:textColor="#000"
        android:textStyle="bold"
        app:backgroundTint="#fff"/>
    <TextView
        android:id="@+id/register_cust_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Don't have an account??"
        android:textColor="#fff"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_tra_btn"
        android:layout_gravity="center"
        android:text="REGISTER"
        android:textColor="#000"
        android:textStyle="bold"
        app:backgroundTint="#fff"/>



</LinearLayout>