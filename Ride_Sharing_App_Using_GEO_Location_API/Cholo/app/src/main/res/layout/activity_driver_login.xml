<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8C00"
    android:orientation="vertical"
    tools:context=".driverLoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="59sp"
        android:text="Driver Login"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/driver_status"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="60sp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:id="@+id/emailDri"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="60sp"
        android:ems="10"
        android:id="@+id/passwordDri"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/login_dri_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOGIN"
        android:textColor="#000"
        android:textStyle="bold"
        app:backgroundTint="#fff"/>
    <TextView
        android:id="@+id/register_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Don't have an account??"
        android:textColor="#fff"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_dri_btn"
        android:layout_gravity="center"
        android:text="REGISTER"
        android:textColor="#000"
        android:textStyle="bold"
        app:backgroundTint="#fff"/>





</LinearLayout>